<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/start_info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="출발 정보"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/destination_info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/start_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/start_info_title"
            app:layout_constraintStart_toStartOf="@+id/start_info_title"
            app:layout_constraintTop_toBottomOf="@+id/start_info_title"
            tools:text="00:00" />

        <TextView
            android:id="@+id/destination_info_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="도착 정보"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/seat"
            app:layout_constraintStart_toEndOf="@+id/start_info_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/destination_info_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/destination_info_title"
            app:layout_constraintStart_toStartOf="@+id/destination_info_title"
            app:layout_constraintTop_toBottomOf="@+id/destination_info_title"
            tools:text="24:00" />

        <CheckBox
            android:id="@+id/seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toStartOf="@+id/special_seat"
            app:layout_constraintStart_toEndOf="@+id/destination_info_content"
            app:layout_constraintTop_toTopOf="@id/destination_info_title" />

        <CheckBox
            android:id="@+id/special_seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seat"
            app:layout_constraintTop_toTopOf="@id/destination_info_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>